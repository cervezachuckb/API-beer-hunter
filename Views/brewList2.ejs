<%- include("partials/header.ejs") %>

<body>
  <div class="main">
    <form action="/submit3" id="form" class="form" method="POST">
        <label for="idInput">Number of breweries per page:</label>
        <select name="perPage" class="form-select" onchange="this.form.submit()">
          <option value="select">select</option>
          <option value="5">5</option>
          <option value="10">10</option>
          <option value="15">15</option>
          <option value="20">20</option>
        </select>
    </form>

    <div class="response-area">
      <% if (locals.stateChoice) { %>
        <h2> List of breweries in <%= stateChoice %> ... </h2>
        <% } %>
        <% if (locals.stateChoice2) { %>
        <h2> List of breweries in <span class="stateChoice"><%= stateChoice2 %></span> (cont.)... </h2>
      <% } %>

    <p>
    <% if (locals.brewList) { %>
      <h2>You've come to the end of the list of breweries in <var class="stateChoice"><%= brewList %></var>. Select another state! 🍺 🍺 🍺</h2>
    <% } %>

    <% if (locals.brewByState) { %>
    <ul>
       <% brewByState.forEach((result) => { %> 
       <li>   <%= result.name %>, <%= result.address_1 %>, <%= result.city %>, <%= result.state %> </li>
          <% }) %>
   </ul>
    <% } %>

   <% if (locals.error) { %>
          <%= oops %>
    <% } %> 
    </p>

    <button type="submit" id="page" value="page" name="choice" onclick="window.location.href='/pageUp'">Next Page</button><button type="submit" id="page2" value="page" name="choice" onclick="window.location.href='/pageDown'">Previous Page</button>


  </div>

</div>
  <!-- <button class="homeBtn" type="submit" onclick="window.location.href='/'">Go home bro.</button> -->
</body>

<%- include("partials/footer.ejs") %>